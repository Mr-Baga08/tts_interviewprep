# TheTruthSchool Frontend Environment Variables
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================
NEXT_PUBLIC_APP_NAME="TheTruthSchool"
NEXT_PUBLIC_APP_DESCRIPTION="AI-Powered Job Preparation Platform"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Backend API URL - adjust for your deployment
NEXT_PUBLIC_API_URL="http://localhost:8000"
NEXT_PUBLIC_API_VERSION="v1"

# Internal API routes (for Next.js API routes)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-here-change-in-production"

# =============================================================================
# AUTHENTICATION SETTINGS (NextAuth.js)
# =============================================================================

# Google OAuth Configuration
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth Configuration
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# JWT Configuration
NEXTAUTH_JWT_SECRET="your-jwt-secret-here"

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# LiveKit Configuration (for real-time interviews)
NEXT_PUBLIC_LIVEKIT_URL="wss://truthschool.livekit.cloud"
LIVEKIT_API_KEY="your-livekit-api-key"
LIVEKIT_API_SECRET="your-livekit-api-secret"

# Judge0 Configuration (for code execution)
NEXT_PUBLIC_JUDGE0_URL="https://api.judge0.com"
JUDGE0_RAPID_API_KEY="your-rapidapi-key-here"

# OpenAI Configuration (for AI features)
OPENAI_API_KEY="sk-your-openai-api-key-here"

# Google Generative AI Configuration
GOOGLE_GENERATIVE_AI_API_KEY="your-google-ai-api-key-here"

# =============================================================================
# ANALYTICS AND MONITORING
# =============================================================================

# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID="G-XXXXXXXXXX"

# Vercel Analytics (if using Vercel)
NEXT_PUBLIC_VERCEL_ANALYTICS=true

# Sentry Configuration (for error tracking)
NEXT_PUBLIC_SENTRY_DSN="your-sentry-dsn-here"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="your-sentry-project"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"

# PostHog Analytics (optional)
NEXT_PUBLIC_POSTHOG_KEY="your-posthog-key"
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# =============================================================================
# FEATURE FLAGS
# =============================================================================
NEXT_PUBLIC_ENABLE_AI_INTERVIEWS=true
NEXT_PUBLIC_ENABLE_CODE_CHALLENGES=true
NEXT_PUBLIC_ENABLE_RESUME_REVIEW=true
NEXT_PUBLIC_ENABLE_MOCK_TESTS=true
NEXT_PUBLIC_ENABLE_ANALYTICS_DASHBOARD=true
NEXT_PUBLIC_ENABLE_REAL_TIME_COLLABORATION=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
NEXT_PUBLIC_MAX_FILE_SIZE=10485760  # 10MB in bytes
NEXT_PUBLIC_ALLOWED_FILE_TYPES="pdf,docx,doc,txt"

# Google Cloud Storage (if using for file uploads)
NEXT_PUBLIC_GCS_BUCKET_NAME="truthschool-uploads"

# =============================================================================
# UI AND UX SETTINGS
# =============================================================================
NEXT_PUBLIC_DEFAULT_THEME="light"
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_ENABLE_SOUND_EFFECTS=false

# Code Editor Settings
NEXT_PUBLIC_DEFAULT_EDITOR_THEME="vs-dark"
NEXT_PUBLIC_EDITOR_FONT_SIZE=14
NEXT_PUBLIC_EDITOR_TAB_SIZE=2

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Only used in development mode
NODE_ENV="development"

# Enable development features
NEXT_PUBLIC_ENABLE_DEVTOOLS=true
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false

# API Rate Limiting (for development)
NEXT_PUBLIC_API_RATE_LIMIT=60  # requests per minute

# =============================================================================
# PRODUCTION SETTINGS (uncomment for production)
# =============================================================================
# NODE_ENV="production"
# NEXT_PUBLIC_APP_URL="https://thetruthschool.com"
# NEXT_PUBLIC_API_URL="https://api.thetruthschool.com"
# NEXTAUTH_URL="https://thetruthschool.com"

# =============================================================================
# DATABASE (if using for Next.js API routes)
# =============================================================================
# Only needed if you're using Next.js API routes with database
# DATABASE_URL="postgresql://username:password@localhost:5432/thetruthschool"

# =============================================================================
# EMAIL SETTINGS (if using for notifications)
# =============================================================================
# SMTP Configuration for sending emails from frontend
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="noreply@thetruthschool.com"

# =============================================================================
# WEBHOOK ENDPOINTS (for external integrations)
# =============================================================================
# Webhook endpoints for external services
WEBHOOK_SECRET="your-webhook-secret"

# =============================================================================
# CONTENT DELIVERY NETWORK (CDN)
# =============================================================================
# CDN URLs for static assets
NEXT_PUBLIC_CDN_URL="https://cdn.thetruthschool.com"
NEXT_PUBLIC_IMAGES_CDN="https://images.thetruthschool.com"

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Content Security Policy
NEXT_PUBLIC_CSP_REPORT_URI="/api/csp-report"

# CORS Origins (for API calls)
NEXT_PUBLIC_ALLOWED_ORIGINS="http://localhost:3000,https://thetruthschool.com"

# =============================================================================
# REDIS (if using for caching)
# =============================================================================
# Redis URL for caching and session storage
REDIS_URL="redis://localhost:6379"

# =============================================================================
# SOCIAL MEDIA INTEGRATION
# =============================================================================
# For social sharing and login
NEXT_PUBLIC_FACEBOOK_APP_ID="your-facebook-app-id"
NEXT_PUBLIC_TWITTER_HANDLE="@thetruthschool"
NEXT_PUBLIC_LINKEDIN_COMPANY_ID="your-linkedin-company-id"

# =============================================================================
# PAYMENT INTEGRATION (if implementing paid features)
# =============================================================================
# Stripe Configuration
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret"

# =============================================================================
# INTERNATIONALIZATION (if implementing multi-language support)
# =============================================================================
NEXT_PUBLIC_DEFAULT_LOCALE="en"
NEXT_PUBLIC_SUPPORTED_LOCALES="en,es,fr,de,zh"

# =============================================================================
# PERFORMANCE MONITORING
# =============================================================================
# Web Vitals and performance monitoring
NEXT_PUBLIC_ENABLE_WEB_VITALS=true
NEXT_PUBLIC_PERFORMANCE_MONITORING=true